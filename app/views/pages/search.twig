{% extends "layout.twig" %}

{% block content %}
  <div class="search-menu row" >
    <div class="col s3 m3 l3 slid">
        <div class="sliders" name="age-picker" id="age-picker"></div>
        <p class="text-center"> Age range </p>
    </div>
    <div class="col s3 m3 l3 slid">
      <div class="sliders" name="range-picker" id="range-picker"></div>
      <p class="text-center"> Area range (km) </p>
    </div>
    <div class="col s3 m3 l3 slid">
        <input type="text" id="range-origin" value="" placeholder="default is your position" name="range-origin">
        <p class="text-center">  Area Origin </p>
    </div>
    <div class="col s3 m3 l3 slid">

        <div class="sliders" name="range-popularity" id="range-popularity"></div>
        <p class="text-center"> Popularity </p>
    </div>
  </div>
  <div class="search-menu row">
    <div class="col s4 m4 l4">
      <div class="tag-picker">

        <a id="tag-container-manager" class="waves-effect waves-light btn btn-floating" onclick="Tagchooserdisplay('tag-container')">
          <i class="material-icons">settings</i>
        </a>
            <div id="tag-container">
              <ul>
                <li>
                    <div class="tagitem" onclick="manageactivity('1', event)">
                      geek
                  </div>
                </li>
                <li>
                    <div class="tagitem" onclick="manageactivity('2', event)">
                      food
                  </div>
                </li>
                <li>
                    <div class="tagitem" onclick="manageactivity('3', event)">
                      sport
                  </div>
                </li>
                <li>
                  <div class="tagitem" onclick="manageactivity('4', event)">
                    sleep
                  </div>
                </li>
                <li>
                  <div class="tagitem" onclick="manageactivity('5', event)">
                  drink
                  </div>
                </li>
              </ul>
            </div>
      </div>
    </div>
    <div class="col s4 m4 l4">
      <button type="button" name="setFilterAge" class="round" onclick="activefilter('Age')">Filter Age</button>
      <button type="button" name="setFilterArea" class="round" onclick="activefilter('Area')">Filter Area</button>
      <button type="button" name="setFilterPop" class="round" onclick="activefilter('Pop')">Filter Popularity</button>
      <button type="button" name="setFilterTag" class="round" onclick="activefilter('Tags')">Filter Tags</button>
    </div>
    <div class="col s4 m4 l4">
      <button type="button" name="StartSearch" class="bigone" onclick="startsearch()">Lancer la recherche</button>
    </div>
  </div>
  <div class="row">
    <div class="col s12 m12 l12" id="sort_content_area">
      <div class="col s2 m2 l2">
        login + picture
      </div>
      <div class="col s2 m2 l2">
        age
        <button type="button" class="sorter" onclick="sortresult('age',event)"><i class="material-icons">keyboard_arrow_down</i></button>
      </div>
      <div class="col s2 m2 l2">
        km
        <button type="button" class="sorter" onclick="sortresult('distance',event)"><i class="material-icons">keyboard_arrow_down</i></button>
      </div>
      <div class="col s2 m2 l2">
        score
        <button type="button" class="sorter" onclick="sortresult('score',event)"><i class="material-icons">keyboard_arrow_down</i></button>
      </div>
      <div class="col s2 m2 l2">
        connect
        <button type="button" class="sorter" onclick="sortresult('connected',event)"><i class="material-icons">keyboard_arrow_down</i></button>
      </div>
      <div class="col s2 m2 l2">
        tags
        <button type="button" class="sorter" onclick="sortresult('tags',event)"><i class="material-icons">keyboard_arrow_down</i></button>
      </div>
    </div>
    <div class="col s12 m12 l12" id="search_content_area">
    </div>
  </div>
  <script type="text/javascript">
  initsliders();
   </script>
{% endblock %}
